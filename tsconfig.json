{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    // "target": "es2018",
    "sourceMap": true,
    "noUnusedLocals": true,
    "lib": ["es6"],
    // "types": ["node", "glob"],
    "esModuleInterop": true,
    "outDir": "./dist",
    // "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["./src"]
}
